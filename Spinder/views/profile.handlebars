<div class="container">
    <div class="row d-flex align-items-center">
            <div class="col-md-3 mb-4">
                <img src="{{user.img}}" id="user-img" class="img-fluid circle">
            </div>
            <div class="col-md-8">
                <h1 class="display-3">{{user.firstName}} {{user.lastName}}</h1>
                <h1 class=" display-7 text-muted">@{{user.username}}</h1>
                <p>{{user.bio}}</p>
                <h6 class="text-muted">{{user.location.city}}, {{user.location.country}}</h6>
                {{#unless user.access_token}}
                <form action="/spotify/login" onload="CheckConnected()" id="spotify-connect">
                    <input class="btn btn-primary" type="submit" value="Connect to Spotify" />
                </form>
                {{/unless}}
            </div>
       </div>
       <div class="row">
           <div class="col-md-6">
            <h2>Musical Profile</h2>
                {{> musical_profile}}
           </div>
       </div>
        <div class="row">
            <div class="mb-4">
                <h2>Top Artists</h2>
                <ol class="list-group list-group-numbered">
                    {{#each user.topArtists}}
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <span class="thumbnail ml-4"><img src="{{this.img}}"></span>
                        <div class="ms-2 me-auto">
                            <div class="fw-bold"><a href="{{this.spotify_url}}">{{this.name}}</a></div>
                        </div>
                    </li>
                    {{/each}}
                </ol>
            </div>
            <div class="mb-4">
                <h2>Top Songs</h2>
                <ol class="list-group list-group-numbered">
                    {{#each user.topSongs}}
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <span class="thumbnail ml-4"><img src="{{this.img}}"></span>
                        <div class="ms-2 me-auto">
                            <div class="fw-bold"><a href="{{this.spotify_url}}">{{this.name}}</a></div>
                            <small class="text-muted">{{this.artists}}</small>
                        </div>
                    </li>
                    {{/each}}
                </ol>
            </div>
            <div class="mb-4">
                <h2>Playlists</h2>
                <ol class="list-group list-group-numbered">
                    {{#each user.playlists}}
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        {{#if this.img}}
                        <span class="thumbnail ml-4"><img src="{{this.img}}"></span>
                        {{else}}
                        <span class="thumbnail ml-4"><img src="/public/images/default_song.jpg"></span>
                        {{/if}}
                        <div class="ms-2 me-auto">
                            <div class="fw-bold"><a href="{{this.spotify_url}}">{{this.name}}</a></div>
                        </div>
                    </li>
                    {{/each}}
                </ol>
            </div>
        </div>
 
</div>
<script src="../public/profile.js"></script>
<script src="../public/js/forms.js"></script>